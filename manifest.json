{
  "name": "BlackT",
  "description": "Extension for highlighting divs",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "128": "logo.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "logo.png",
      "38": "logo.png"
    },
    "default_title": "reDDiv"
  },

  "content_scripts": [
    {
      "matches": ["https://local-ntp/local-ntp.html"],
      "css": ["style.css"],
      "html": ["index.html"],
      "run_at": "document_start"
    }
  ]
}
